<% include ../partials/header %>
<div class="row">
    <div class="col-md-3">
        <p class="lead">Voting App</p>
        <div class="list-group">
            <li class="list-group-item active"> Info 1</li>
            <li class="list-group-item"> Info 2</li>
            <li class="list-group-item"> Info 3</li>
        </div>
    </div>
    <div class="col-md-9">
        <h4><a><%= poll.name %></a></h4>
        <p>
            <em>Submitted by: <a href='/users/<%= poll.author.id %>'> <%= poll.author.username %> </a> </em>
        </p>
        <% if(currentUser && (poll.author.id.equals(currentUser._id))){ %>
        <a class="btn btn-warning" href='/<%= poll._id%>/edit'>Edit</a>
        <form class="deleteForm" action="/<%= poll._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
        <% } %>
    </div>
</div>
<% include ../partials/footer %>