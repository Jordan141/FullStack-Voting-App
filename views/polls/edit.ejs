<% include ../partials/header %>
    <div class="row">
        <h1>Edit <%= poll.name %></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action="/<%= poll._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="poll[name]" value="<%= poll.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poll[image]" value="<%= poll.options %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>